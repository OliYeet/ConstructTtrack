# ConstructTrack Development Environment Configuration
# This file contains development-specific environment variables

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=constructtrack:*
LOG_LEVEL=debug
ENABLE_LOGGING=true
ENABLE_DEBUG_TOOLS=true

# =============================================================================
# LOCAL DEVELOPMENT URLS
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
WEBHOOK_URL=http://localhost:3001/webhook

# =============================================================================
# DEVELOPMENT SECURITY (Less strict for development)
# =============================================================================
API_RATE_LIMIT=1000
JWT_SECRET=dev_jwt_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_32_chars_long

# =============================================================================
# DEVELOPMENT SYNC CONFIGURATION
# =============================================================================
SYNC_PORT=3001
ENABLE_HOT_RELOAD=true
ENABLE_FILE_WATCHING=true

# =============================================================================
# DEVELOPMENT MAPBOX (Use development tokens)
# =============================================================================
# Use your development MapBox tokens here
MAPBOX_ACCESS_TOKEN=pk.your_dev_mapbox_token_here
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_dev_mapbox_token_here
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_dev_mapbox_token_here

# =============================================================================
# DEVELOPMENT DATABASE (Use development Supabase project)
# =============================================================================
# Use your development Supabase project here
SUPABASE_URL=https://your-dev-project-id.supabase.co
SUPABASE_ANON_KEY=your_dev_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_dev_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_URL=https://your-dev-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_dev_supabase_anon_key
EXPO_PUBLIC_SUPABASE_URL=https://your-dev-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_dev_supabase_anon_key

# =============================================================================
# DEVELOPMENT NOTION (Use development workspace)
# =============================================================================
NOTION_TOKEN=secret_your_dev_notion_token
NOTION_PARENT_PAGE_ID=your_dev_parent_page_id
NOTION_DATABASE_ID=your_dev_database_id
NOTION_WEBHOOK_SECRET=your_dev_webhook_secret
