# ConstructTrack Production Environment Configuration
# This file contains production-specific environment variables

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3000

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
DEBUG=
LOG_LEVEL=error
ENABLE_LOGGING=true
ENABLE_DEBUG_TOOLS=false

# =============================================================================
# PRODUCTION URLS
# =============================================================================
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
WEBHOOK_URL=https://your-production-domain.com/webhook

# =============================================================================
# PRODUCTION SECURITY (Strict settings)
# =============================================================================
API_RATE_LIMIT=100
JWT_SECRET=your_secure_production_jwt_secret_here
ENCRYPTION_KEY=your_secure_32_char_encryption_key

# =============================================================================
# PRODUCTION SYNC CONFIGURATION
# =============================================================================
SYNC_PORT=3001
ENABLE_HOT_RELOAD=false
ENABLE_FILE_WATCHING=false

# =============================================================================
# PRODUCTION MAPBOX
# =============================================================================
MAPBOX_ACCESS_TOKEN=pk.your_production_mapbox_token_here
NEXT_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_production_mapbox_token_here
EXPO_PUBLIC_MAPBOX_ACCESS_TOKEN=pk.your_production_mapbox_token_here

# =============================================================================
# PRODUCTION DATABASE
# =============================================================================
SUPABASE_URL=https://your-production-project-id.supabase.co
SUPABASE_ANON_KEY=your_production_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_production_supabase_service_role_key
NEXT_PUBLIC_SUPABASE_URL=https://your-production-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key
EXPO_PUBLIC_SUPABASE_URL=https://your-production-project-id.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your_production_supabase_anon_key

# =============================================================================
# PRODUCTION NOTION
# =============================================================================
NOTION_TOKEN=secret_your_production_notion_token
NOTION_PARENT_PAGE_ID=your_production_parent_page_id
NOTION_DATABASE_ID=your_production_database_id
NOTION_WEBHOOK_SECRET=your_production_webhook_secret

# =============================================================================
# PRODUCTION THIRD-PARTY SERVICES
# =============================================================================
# Email Service
SMTP_HOST=smtp.your-production-email-provider.com
SMTP_PORT=587
SMTP_USER=your_production_email@domain.com
SMTP_PASS=your_production_email_password

# SMS Service
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Cloud Storage
AWS_ACCESS_KEY_ID=your_production_aws_access_key
AWS_SECRET_ACCESS_KEY=your_production_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-production-s3-bucket
