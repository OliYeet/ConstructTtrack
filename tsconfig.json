{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "es6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./apps/web/src/*"],
      "@/types/*": ["./apps/web/src/types/*"],
      "@constructtrack/shared": ["./packages/shared"],
      "@constructtrack/shared/*": ["./packages/shared/*"],
      "@constructtrack/ui": ["./packages/ui"],
      "@constructtrack/ui/*": ["./packages/ui/*"],
      "@constructtrack/supabase": ["./packages/supabase"],
      "@constructtrack/supabase/*": ["./packages/supabase/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "**/dist", "**/build", "**/.next", "**/.expo"]
}
