{
  "name": "@constructtrack/ws-gateway",
  "version": "0.1.0",
  "description": "WebSocket Gateway for ConstructTrack real-time infrastructure",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "bun --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "healthcheck": "curl -f http://localhost:8080/healthz || exit 1",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.12",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/ws": "^8.5.10",
    "bun-types": "^1.0.20",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "websocket",
    "realtime",
    "supabase",
    "constructtrack"
  ],
  "author": "ConstructTrack Team",
  "license": "MIT"
}
