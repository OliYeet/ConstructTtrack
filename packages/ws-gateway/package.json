{
  "name": "@constructtrack/ws-gateway",
  "version": "0.1.0",
  "description": "WebSocket Gateway for ConstructTrack real-time infrastructure",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node",
    "dev": "bun --watch src/index.ts",
    "start": "node dist/index.js",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix"
  },
  "dependencies": {
    "@constructtrack/shared": "workspace:*",
    "@supabase/supabase-js": "^2.39.0",
    "ws": "^8.16.0",
    "jsonwebtoken": "^9.0.2",
    "redis": "^4.6.12",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "bun-types": "^1.0.20",
    "ws-mock": "^1.0.0"
  },
  "keywords": [
    "websocket",
    "realtime",
    "supabase",
    "constructtrack"
  ],
  "author": "ConstructTrack Team",
  "license": "MIT"
}
