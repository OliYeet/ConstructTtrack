{
  "name": "constructtrack",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run packages:build && npm run build:strict",
    "build:strict": "npm run build --workspaces",
    "build:safe": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:root": "jest",
    "test:db": "jest tests/database/",
    "test:migration": "jest tests/database/migration-system.test.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "web:dev": "npm run dev --workspace=apps/web",
    "web:build": "npm run build --workspace=apps/web",
    "mobile:dev": "npm run start --workspace=apps/mobile",
    "mobile:ios": "npm run ios --workspace=apps/mobile",
    "mobile:android": "npm run android --workspace=apps/mobile",
    "packages:build": "npm run build --workspace=@constructtrack/shared && npm run build --workspace=@constructtrack/supabase && npm run build --workspace=@constructtrack/ui",
    "packages:dev": "concurrently \"npm run dev --workspace=@constructtrack/shared\" \"npm run dev --workspace=@constructtrack/ui\" \"npm run dev --workspace=@constructtrack/supabase\"",
    "deps:check": "npm audit --workspaces",
    "deps:update": "npm update --workspaces",
    "deps:outdated": "npm outdated --workspaces",
    "deps:analyze": "node scripts/dependency-manager.js analyze",
    "deps:audit": "node scripts/dependency-manager.js audit",
    "deps:update-patch": "node scripts/dependency-manager.js update-patch",
    "deps:update-minor": "node scripts/dependency-manager.js update-minor",
    "deps:clean-install": "node scripts/dependency-manager.js clean-install",
    "workspace:install": "npm install --workspaces",
    "workspace:clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "workspace:validate": "node scripts/validate-workspace.js",
    "notion:setup": "node src/notion-setup.js",
    "notion:import": "node src/notion-importer.js",
    "notion:dev": "node --watch src/notion-importer.js",
    "notion:sync": "node src/notion-sync.js",
    "notion:sync:dev": "NODE_ENV=development node src/notion-sync.js",
    "notion:bulk-import": "node src/notion-bulk-importer.js",
    "notion:sync:setup": "node src/setup-sync.js",
    "tunnel:help": "node scripts/setup-tunnels.js",
    "tunnel:ngrok": "node scripts/setup-tunnels.js start ngrok",
    "tunnel:cloudflare": "node scripts/setup-tunnels.js start cloudflared",
    "tunnel:local": "node scripts/setup-tunnels.js start localtunnel",
    "lint:fix": "eslint . --fix",
    "lint:check": "eslint . --max-warnings 0",
    "prepare": "node -e \"process.exit(process.env.CI ? 0 : 1)\" || husky install",
    "env:setup": "cd . && node scripts/env-setup.js",
    "env:validate": "cd . && node scripts/env-validator.js",
    "env:check": "cd . && node scripts/env-validator.js",
    "api:validate": "node scripts/validate-openapi.js",
    "api:validate:spec": "npx swagger-cli validate docs/api/openapi.yaml",
    "api:validate:implementation": "node scripts/validate-api-implementation.js",
    "api:diff": "node scripts/openapi-diff.js",
    "api:docs:generate": "npx @redocly/cli build-docs docs/api/openapi.yaml --output docs/api/index.html",
    "api:test:endpoints": "node scripts/test-api-endpoints.js",
    "db:setup": "node scripts/setup-database.js",
    "db:setup:quick": "node scripts/setup-database.js --skip-seed --skip-validation",
    "db:migrate": "supabase db push",
    "db:migrate:create": "node scripts/migration-manager.js create",
    "db:migrate:list": "node scripts/migration-manager.js list",
    "db:migrate:status": "node scripts/migration-manager.js status",
    "db:migrate:run": "node scripts/migration-manager.js run",
    "db:migrate:validate": "node scripts/migration-manager.js validate",
    "db:migrate:backup": "node scripts/migration-manager.js backup",
    "db:migrate:reset": "node scripts/migration-manager.js reset",
    "db:reset": "supabase db reset",
    "db:types": "node scripts/generate-db-types.js",
    "db:types:generate": "supabase gen types typescript --local > packages/supabase/types/database.ts",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:status": "supabase status",
    "db:test": "npm test -- tests/database/",
    "db:validate": "node scripts/setup-database.js --skip-cli-check --skip-local-start --skip-migrations --skip-types --skip-seed",
    "test:unit": "TEST_TYPE=unit jest",
    "test:integration": "TEST_TYPE=integration jest tests/integration",
    "test:e2e": "TEST_TYPE=e2e jest tests/e2e",
    "test:coverage": "jest --coverage",
    "test:smoke": "TEST_TYPE=smoke jest",
    "test:performance": "node scripts/performance-tests.js",
    "test:a11y": "node scripts/accessibility-tests.js",
    "security:scan": "node scripts/security-scanner.js",
    "docs:generate": "npm run api:docs:generate",
    "docs:validate": "npm run api:validate",
    "docs:coverage": "node scripts/docs-coverage.js",
    "analyze:bundle": "node scripts/bundle-analyzer.js",
    "a11y:report": "node scripts/accessibility-report.js",
    "db:seed:prod": "node scripts/seed-production.js",
    "lint:quick": "eslint apps/web/src --max-warnings 0"
  },
  "keywords": [
    "construction",
    "fiber-optic",
    "project-management",
    "notion"
  ],
  "author": "ConstructTrack Development Team",
  "license": "ISC",
  "description": "ConstructTrack - Fiber Optic Installation Management Platform",
  "dependencies": {
    "@modelcontextprotocol/server-sequential-thinking": "^0.6.2",
    "@notionhq/client": "^2.2.15",
    "@supabase/supabase-js": "^2.39.0",
    "@upstash/context7-mcp": "^1.0.12",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "inquirer": "^9.0.0",
    "ora": "^7.0.1",
    "server-perplexity-ask": "^0.1.3"
  },
  "devDependencies": {
    "@apidevtools/swagger-cli": "^4.0.4",
    "@apidevtools/swagger-parser": "10.1.1",
    "@eslint/js": "^9.18.0",
    "@redocly/cli": "1.34.3",
    "@types/inquirer": "9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.27.1",
    "@typescript-eslint/parser": "^8.27.1",
    "concurrently": "9.1.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "30.0.0-beta.3",
    "lint-staged": "^15.2.0",
    "openapi-diff": "0.23.7",
    "prettier": "^3.2.5",
    "swagger-jsdoc": "^6.2.8",
    "typescript": "^5.3.3"
  }
}
