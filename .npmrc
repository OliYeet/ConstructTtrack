# ConstructTrack NPM Configuration

# Workspace configuration
# workspaces=true  # Disabled to prevent automatic workspace execution
save-exact=true

# Security and performance
audit-level=moderate
fund=false

# Package resolution
prefer-offline=true
progress=true

# Registry configuration
registry=https://registry.npmjs.org/

# Cache configuration (using prefer-offline instead of deprecated cache-max)
# cache-max has been deprecated - using prefer-offline=true above instead

# Development settings
loglevel=warn
